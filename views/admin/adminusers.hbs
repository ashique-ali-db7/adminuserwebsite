


<section>

<div class="container mt-3">
  
<table class="table" id="userstable">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th class="aa" scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">email</th>
     <th scope="col">edit</th>
      <th scope="col">Block</th>
      <th scope="col">Delete</th>
      
      
    </tr>
  </thead>
  <tbody>
     {{#each userdetails}}
    <tr>
      <td scope="row">{{@key}}</td>
     
      <td>{{this.firstname}}</td>
      <td>{{this.lastname}}</td>
      <td>{{this.email}}</td>
    <td><a href="/edit-user?email={{this.email}}"  class="btn btn-primary unblock">edit</a></td>
{{#if this.blocked}}
 <td><a href="/unblock-user?email={{this.email}}" class="btn btn-primary unblock">unblock</a></td>
     
     {{else}}
     <td><a href="/block-user?email={{this.email}}" style="width: 85px;" class="btn btn-dark  block" onclick="return confirm('Are you sure you want to block {{this.firstname}} user?')">Block</a></td>
  {{/if}}
     
     

      <td><a href="/delete-user?email={{this.email}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete {{this.firstname}} user?')">Delete</a></td>
    </tr>
   {{/each}}
  </tbody>
</table>

</section>
</div>


